---
import CelIcon from "../icons/CelIcon.astro";
import PuzzleIcon from "../icons/PuzzleIcon.astro";
---

<div>
  <div class="bg-[#F8B133] flex rounded-full mt-40">
    <CelIcon class="size-16 fill-white ml-4 mr-4" />
    <div>
      <h1 class="text-2xl text-white">Contactanos</h1>

      <h1 class="text-2xl text-white font-bold">
        Y construyamos juntos tu proyecto
      </h1>
    </div>
  </div>
</div>

<div class="flex-row">
  <div class="mt-12">
    <h1 class="text-5xl font-bold text-center">¿Todo listo?</h1>
  </div>
  <div>
    <h1 class="text-2xl font-semibold text-center">
      Contáctanos, cotiza, y descubre porque somos tu mejor opción
    </h1>
  </div>

  <div class="flex justify-center pt-9">
    <a
      href="https://wa.me/526183006203"
      class="inline-flex p-4 bg-red-700 text-white text-3xl font-bold rounded-full"
    >
      Cotiza ahora</a
    >
  </div>
  <div class="flex justify-center">
    <PuzzleIcon class="size-1/3 justify-center items-center" />
  </div>
</div>
<!-- contac us
  -->

<div class="bg-[#1D70B7] bl py-12 md:-mt-8 rounded-3xl">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <h2 class="text-base text-white font-semibold tracking-wide uppercase">
        Informacion de contacto
      </h2>
      <p
        class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-white sm:text-4xl"
      >
        Localizacion
      </p>
      <p class="mt-4 max-w-2xl text-xl text-white lg:mx-auto">
        Victoria de Durango
      </p>
    </div>

    <div class="mt-10">
      <dl
        class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10"
      >
        <div class="flex">
          <div class="flex-shrink-0">
            <div
              class="flex items-center justify-center h-12 w-12 rounded-md bg-white text-[#1D70B7]"
            >
              <!-- Heroicon name: globe-alt -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418"
                ></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <dt class="text-lg leading-6 font-medium text-white">Dirección</dt>
            <dd class="mt-2 text-base text-white">
              José del Campo 7, Nueva Vizcaya, <br />
              34080 Durango, Dgo.
            </dd>
          </div>
        </div>

        <div class="flex">
          <div class="flex-shrink-0">
            <div
              class="flex items-center justify-center h-12 w-12 rounded-md bg-white text-[#1D70B7]"
            >
              <!-- Heroicon name: phone -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                ></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <dt class="text-lg leading-6 font-medium text-white">
              Numero de telefono
            </dt>
            <dd class="mt-2 text-base text-white">618 300 6203</dd>
          </div>
        </div>

        <div class="flex">
          <div class="flex-shrink-0">
            <div
              class="flex items-center justify-center h-12 w-12 rounded-md bg-white text-[#1D70B7]"
            >
              <!-- Heroicon name: mail -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <dt class="text-lg leading-6 font-medium text-white">Email</dt>
            <dd class="mt-2 text-base text-white">copymaxdgo@gmail.com</dd>
          </div>
        </div>

        <div class="flex">
          <div class="flex-shrink-0">
            <div
              class="flex items-center justify-center h-12 w-12 rounded-md bg-white text-[#1D70B7]"
            >
              <!-- Heroicon name: clock -->
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <dt class="text-lg leading-6 font-medium text-white">Horario</dt>
            <dd class="mt-2 text-base text-white">
              Lunes a Viernes: 8 am a 9 pm<br />
              Sabado: 9 am a 6 pm<br />
              Domingo: 10 am to 3 pm
            </dd>
          </div>
        </div>
      </dl>
    </div>
  </div>
</div>
