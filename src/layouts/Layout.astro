---
import "@fontsource-variable/quicksand";
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Tu negocio de copias, impresiones y diseño en Durango."
    />

    <!-- Open Graph meta tags para compartir en redes sociales y WhatsApp -->
    <meta
      property="og:title"
      content="Copias e Impresiones en Durango | Diseño Gráfico"
    />
    <meta
      property="og:description"
      content="Tu negocio de copias, impresiones y diseño en Durango."
    />
    <meta property="og:image" content="/favicon.svg" />
    <!-- Cambia esta URL a la de tu imagen -->
    <meta property="og:url" content="https://copymax.vercel.app/" />
    <!-- URL de tu página -->
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Copymax</title>
  </head>
  <body>
    <slot />
    <script src="../js/main"></script>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "Quicksand Variable", sans-serif;
    background-color: #ffffff; /* Establece el color de fondo a blanco */
  }
  body {
    background-color: #ffffff; /* Mantén el fondo blanco también en el body */
  }
  @media (prefers-color-scheme: dark) {
    html,
    body {
      background-color: #ffffff; /* Mantiene el fondo blanco en modo oscuro */
    }
  }
</style>
